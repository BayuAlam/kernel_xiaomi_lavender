#!/bin/bash
echo "Cloning dependencies"
git clone https://github.com/z4nyx/AnyKernel3.git --depth=1 AnyKernel
echo "Done"
KERNEL_DIR=$(pwd)
IMAGE=$(pwd)/out/arch/arm64/boot/Image.gz-dtb
SHA=$(echo "$CIRCLE_SHA1" | cut -c 1-6)
START2=$(date +"%s")
export ARCH=arm64
export KBUILD_BUILD_USER=haiku
export KBUILD_BUILD_HOST=circleci
export CCV=$(clang --version | head -n 1 | perl -pe 's/\(git.*?\)//gs' | sed -e 's/  */ /g')
# Push kernel to channel
function push() {
    cd AnyKernel
    curl -F document=@"$(echo *.zip)" "https://api.telegram.org/bot$bot/sendDocument" \
        -F chat_id="$chat" \
        -F "disable_web_page_preview=true" \
        -F "parse_mode=html" \
        -F caption="Build took $(($DIFF2 / 60)) minute(s) and $(($DIFF2 % 60)) second(s). | For <b>Xiaomi Redmi Note 7/7S (lavender) Android 11/R</b> | <b>$CCV</b>"
}
# Fin Error
function finerr() {
    curl -s -X POST "https://api.telegram.org/bot$bot/sendMessage" \
        -d chat_id="$chat" \
        -d "disable_web_page_preview=true" \
        -d "parse_mode=markdown" \
        -d text="Build throw an error(s)"
    exit 1
}
# Compile plox
function compile() {
    make -s -j$(nproc) O=out lavender-perf_defconfig
    make -j$(nproc) O=out \
                    CC=clang \
                    CROSS_COMPILE=aarch64-linux-gnu-
        if ! [ -a "$IMAGE" ]; then
            finerr
            exit 1
        fi
    cp ${IMAGE} AnyKernel/
}
# Zipping
function zipping() {
    cd AnyKernel || exit 1
    TARIKH2=$(TZ=Asia/Kuala_Lumpur date +"%F")
    zip -r9 Stormbreaker-lavender-${TARIKH2}-${SHA}.zip *
    cd ..
}
compile
zipping
END2=$(date +"%s")
DIFF2=$(($END2 - $START2))
push
